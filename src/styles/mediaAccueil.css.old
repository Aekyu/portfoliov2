@media only screen and (max-width: 424px) {
    body {
        margin-left: 20px;
        margin-right: 20px;
    }

    #shapeTopLeft {
        visibility: hidden;
    }

    #h1Title {
        width: 90%;
    }

    #descriptionAccueil {
        width: 50%;
    }

    ul#right li a {
        padding: 14px 14px;
    }

    #allContainProject, #allContainProjectReverse {
        min-width: 400px !important;
        border-radius: 25px 25px 25px 25px;
        height: 360px;
    }

    #imgProject, #imgProjectReverse {
        visibility : hidden;
        width:0;
    }

    #divProjects {
        /* transform: scale(0.8); */
        height: 290px;
    }

    ul#right{
        justify-content: center;
        
    }

    #h1Title {
        font-size: 28px;
        width: 100%;
    }

    #descriptionAccueil {
        font-size: 14px;
        width: 60%;
    }

    #titleProject {
        font-size: 24px;
    }

    #descriptionProjet{
        font-size: 14px;
    }
}

